{
    "name": "contractrpro",
    "version": "1.0.0",
    "type": "commonjs",
    "description": "Manage your contracts, jobs, expenses, invoices and much more",
    "main": "dist/index.js",
    "scripts": {
        "test": "cross-env NODE_ENV=test LOG_LEVEL=error jest -c jest.config.ts --maxWorkers=25 --forceExit --bail --",
        "test:verbose": "cross-env NODE_ENV=test LOG_LEVEL=debug jest -c jest.config.ts --runInBand --forceExit --verbose=true --",
        "coverage": "cross-env NODE_ENV=test LOG_LEVEL=debug jest -c jest.config.ts --runInBand --coverage",
        "lint": "eslint .",
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "NODE_ENV=development LOG_LEVEL=debug nodemon",
        "prettier": "prettier --write .",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "ts-node db/migrate.ts"
    },
    "author": "Bytech Labs",
    "license": "ISC",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.948.0",
        "@scalar/express-api-reference": "^0.8.28",
        "bcrypt": "^6.0.0",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "express": "^5.2.1",
        "express-validator": "^7.3.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.3",
        "multer": "^2.0.2",
        "multer-s3": "^3.0.1",
        "node-oauth2-server": "^2.4.0",
        "pg": "^8.16.3",
        "pino": "^10.1.0",
        "pino-http": "^11.0.0",
        "pino-pretty": "^13.1.3",
        "postgres": "^3.4.7",
        "swagger-jsdoc": "^6.2.8",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.1.0",
        "@types/bcrypt": "^6.0.0",
        "@types/body-parser": "^1.19.6",
        "@types/compression": "^1.8.1",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/multer": "^2.0.0",
        "@types/multer-s3": "^3.0.3",
        "@types/node": "^25.0.2",
        "@types/pg": "^8.16.0",
        "@types/supertest": "^6.0.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "cross-env": "^10.1.0",
        "drizzle-kit": "^0.31.8",
        "eslint": "^9.39.2",
        "jest": "^30.2.0",
        "nodemon": "^3.1.11",
        "prettier": "3.7.4",
        "supertest": "^7.1.4",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "optionalDependencies": {
        "win-node-env": "^0.6.1"
    }
}